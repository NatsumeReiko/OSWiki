<?xml version="1.0" encoding="utf-8"?>
<manifest package="lab.fun.oswiki"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!--  -->

        <activity
            android:name=".softinputmode.InputModeSimpleShowCase"
            android:label="Soft input mode/InputModeSimpleShowCase">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="lab.fun.oswiki.SAMPLE_CODE"/>
            </intent-filter>
        </activity>


        <activity
            android:name=".softinputmode.InputModeSimpleTest"
            android:label="Soft input mode/InputModeSimpleTest"
            android:parentActivityName=".softinputmode.InputModeSimpleTest"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar"

            android:windowSoftInputMode="stateHidden|adjustResize"
            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="lab.fun.oswiki.SAMPLE_CODE"/>
            </intent-filter>

        </activity>
    </application>

</manifest>
